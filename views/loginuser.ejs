<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: url('https://images.unsplash.com/photo-1496307042754-b4aa456c4a2d') no-repeat center center fixed;
      background-size: cover;
      color: white;
      min-height: 100vh;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.6);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
      flex-wrap: wrap;
    }

    .navbar h1 {
      font-size: 28px;
      color: white;
    }

    .navbar a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      font-size: 16px;
      transition: color 0.3s ease;
    }

    .navbar a:hover {
      color: #ddd;
    }

    .container {
      min-height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .login-box {
      background: rgba(0, 0, 0, 0.5);
      padding: 35px;
      border-radius: 15px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .login-box h2 {
      text-align: center;
      margin-bottom: 25px;
      font-size: 26px;
      color: white;
    }

    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 12px;
      margin: 10px 0 20px;
      border-radius: 10px;
      border: none;
      background: rgba(255, 255, 255, 0.1);
      color: white;
      font-size: 16px;
    }

    input::placeholder {
      color: #ccc;
    }

    input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.2);
    }

    .submit-btn {
      width: 100%;
      padding: 12px;
      background-color: rgba(0, 123, 255, 0.8);
      color: white;
      font-size: 17px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .submit-btn:hover {
      background-color: rgba(0, 123, 255, 1);
    }

    .login-footer {
      margin-top: 20px;
      text-align: center;
      font-size: 14px;
      color: #ccc;
    }

    .login-footer a {
      color: #00aced;
      text-decoration: none;
    }

    .login-footer a:hover {
      text-decoration: underline;
    }

    footer {
      background: rgba(0, 0, 0, 0.6);
      text-align: center;
      padding: 15px;
      color: white;
      font-size: 14px;
    }

    @media (max-width: 480px) {
      .navbar h1 {
        font-size: 22px;
        margin-bottom: 10px;
      }

      .navbar {
        flex-direction: column;
        align-items: flex-start;
      }

      .navbar a {
        margin: 5px 0;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <div class="navbar">
    <h1>Creator Awards</h1>
    <div>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </div>
  </div>

  <!-- Login Form -->
  <div class="container">
    <div class="login-box">
      <h2>Login to Your Account</h2>
      <form action="/login" method="POST">
        <input type="email" name="email" placeholder="Enter your email" required />
        <input type="password" name="password" placeholder="Enter your password" required />
        <button type="submit" class="submit-btn">Login</button>
      </form>
      <div class="login-footer">
        Don't have an account? <a href="/signup">Sign Up</a>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    &copy; 2025 Creator Awards Platform. All rights reserved.
  </footer>

  <!-- SweetAlert Logic -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const params = new URLSearchParams(window.location.search);

    if (params.get('error') === 'invalid') {
      Swal.fire({
        icon: 'error',
        title: 'Login Failed',
        text: 'Invalid email or password. Please try again.'
      });
    } else if (params.get('error') === 'empty') {
      Swal.fire({
        icon: 'warning',
        title: 'Missing Info',
        text: 'Please fill in both email and password.'
      });
    } else if (params.get('login') === 'success') {
      const name = params.get('name');
      Swal.fire({
        icon: 'success',
        title: `Welcome ${name}!`,
        text: 'You have successfully logged in.',
        confirmButtonText: 'Proceed'
      }).then(() => {
        window.location.href = '/awards';
      });
    }
  </script>
</body>
</html>
