        .navbar .navbar-brand,
.navbar .nav-link {
    color: #007bff; /* Bootstrap blue */
}

        
        .header {
            text-align: center;
            margin: 30px 0;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        
        .awards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }
        
        .award-card {
            width: 280px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 20px;
        }
        
        .award-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }
        
        .card-img-container {
    height: 180px;
    width: 100%;
    overflow: hidden;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card-img-top {
    height: 100%;
    width: auto;
    object-fit: cover;
}

        
        .card-body {
            padding: 20px;
        }
        
        .card-title {
            color: #d63384;
            font-weight: 700;
            margin-bottom: 15px;
        }
        
        .card-text {
            color: #495057;
            margin-bottom: 20px;
            font-size: 0.95rem;
        }
        
        .btn-primary {
    background-color: #6f42c1; /* Violet */
    border-color: #6f42c1;
    width: 100%;
    font-weight: 600;
    letter-spacing: 0.5px;
    color: #fff;
}

.btn-primary:hover {
    background-color: #5a32a3;
    border-color: #5a32a3;
}

        
        .trophy-icon {
            color: gold;
            margin-right: 8px;
        }
        
        @media (max-width: 1200px) {
            .award-card {
                width: 250px;
            }
        }
        
        @media (max-width: 992px) {
            .award-card {
                width: 45%;
            }
        }
        
        @media (max-width: 768px) {
            .award-card {
                width: 100%;
                max-width: 350px;
            }
        }
    </style>
</head>
