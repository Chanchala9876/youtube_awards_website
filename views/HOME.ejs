    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #ff0000;
            --secondary-color: #282828;
            --accent-color: #f9a825;
            --light-bg: #f8f9fa;
            --dark-text: #212529;
            --light-text: #f8f9fa;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-image: url(/images/background3.jpg);
            color: var(--light-text);
            min-height: 100vh;
            position: relative;
            padding-bottom: 100px;
        }
        
        /* Modern Navbar */
        .navbar {
            background: rgba(40, 40, 40, 0.9) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            padding: 15px 0;
            transition: all 0.3s ease;
        }
        
        .navbar.scrolled {
            background: rgba(40, 40, 40, 0.95) !important;
            padding: 10px 0;
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--primary-color) !important;
            display: flex;
            align-items: center;
        }
        
        .navbar-brand i {
            margin-right: 10px;
            font-size: 1.5rem;
        }
        
        .nav-link {
            font-weight: 500;
            margin: 0 8px;
            color: var(--light-text) !important;
            position: relative;
            transition: all 0.3s ease;
        }
        
        .nav-link:hover {
            color: var(--primary-color) !important;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: var(--primary-color);
            transition: width 0.3s ease;
        }
        
        .nav-link:hover::after {
            width: 100%;
        }
        
        .dropdown-menu {
            background-color: rgba(40, 40, 40, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .dropdown-item {
            color: var(--light-text);
        }
        
        .dropdown-item:hover {
            background-color: var(--primary-color);
            color: white;
        }
        
        /* Hero Section */
        .hero-section {
            padding: 100px 0 50px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,0,0,0.1) 0%, rgba(0,0,0,0.8) 70%);
            z-index: -1;
        }
        
        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }
        
        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 30px;
            opacity: 0.9;
        }
        
        /* Carousel */
        .carousel-container {
            max-width: 1200px;
            margin: 0 auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }
        
        .carousel-item img {
            height: 500px;
            object-fit: cover;
            object-position: center;
        }
        
        .carousel-caption {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            border-radius: 10px;
            padding: 20px;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
        }
        
        .carousel-caption h5 {
            font-size: 2rem;
            font-weight: 700;
        }
        
        .carousel-caption p {
            font-size: 1.2rem;
        }
        
        /* Cards Section */
        .cards-section {
            padding: 80px 0;
        }
        
        .section-title {
            text-align: center;
            margin-bottom: 50px;
            font-weight: 700;
            position: relative;
        }
        
        .section-title::after {
            content: '';
            display: block;
            width: 100px;
            height: 4px;
            background: var(--primary-color);
            margin: 15px auto;
            border-radius: 2px;
        }
        
        .award-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            margin-bottom: 30px;
            height: 100%;
        }
        
        .award-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            border-color: var(--primary-color);
        }
        
        .card-img-top {
            height: 250px;
            object-fit: cover;
            object-position: center;
        }
        
        .card-body {
            padding: 25px;
        }
        
        .card-title {
            font-weight: 700;
            margin-bottom: 15px;
            color: white;
        }
        
        .card-text {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
        }
        
        .btn-award {
            background: var(--primary-color);
            border: none;
            border-radius: 30px;
            padding: 10px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-award:hover {
            background: #cc0000;
            transform: scale(1.05);
        }
        
        /* Result Button */
        .result-btn-container {
            position: fixed;
            top: 20px;
            right: 30px;
            z-index: 1000;
        }
        
        .result-btn {
            background: linear-gradient(45deg, #ff4081, #ff6ec4);
            color: white;
            padding: 12px 25px;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 30px;
            text-decoration: none;
            box-shadow: 0 4px 15px rgba(255, 64, 129, 0.4);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            animation: pulse 2s infinite;
        }
        
        .result-btn i {
            margin-right: 8px;
        }
        
        .result-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(255, 64, 129, 0.6);
            color: white;
        }
        
        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(255, 64, 129, 0.7);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(255, 64, 129, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(255, 64, 129, 0);
            }
        }
        
        /* Footer */
        .footer {
            background: rgba(0, 0, 0, 0.8);
            padding: 40px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        
        .footer-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        
        .footer-logo {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 20px;
        }
        
        .footer-links {
            display: flex;
            gap: 30px;
            margin-bottom: 20px;
        }
        
        .footer-link {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .footer-link:hover {
            color: var(--primary-color);
        }
        
        .social-icons {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .social-icon {
            color: white;
            font-size: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .social-icon:hover {
            color: var(--primary-color);
            transform: translateY(-3px);
        }
        
        .copyright {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.9rem;
        }
        
        /* Responsive Adjustments */
        @media (max-width: 992px) {
            .hero-title {
                font-size: 2.8rem;
            }
            
            .hero-subtitle {
                font-size: 1.2rem;
            }
            
            .carousel-item img {
                height: 400px;
            }
        }
        
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
            
            .hero-title {
                font-size: 2.2rem;
            }
            
            .hero-subtitle {
                font-size: 1rem;
            }
            
            .carousel-item img {
                height: 300px;
            }
            
            .carousel-caption {
                width: 90%;
                padding: 15px;
            }
            
            .carousel-caption h5 {
                font-size: 1.5rem;
            }
            
            .carousel-caption p {
                font-size: 1rem;
            }
            
            .footer-links {
                flex-direction: column;
                gap: 15px;
            }
            
            
        }
        .result-btn {
  font-size: 0.85rem;
  padding: 4px 8px;
  font-weight: 600;
  max-width: 140px;   /* max width */
  white-space: nowrap;
  text-align: center;
  display: inline-block;
}

    </style>
</head>

